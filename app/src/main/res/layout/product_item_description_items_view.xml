<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/attribute_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/product_detail_attribute_header_margin"
        android:fontFamily="@font/montserrat_font"
        android:textSize="@dimen/product_detail_attribute_header_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Header" />

    <TextView
        android:id="@+id/attribute_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/product_detail_attribute_value_margin_horizontal"
        android:layout_marginTop="@dimen/product_detail_attribute_value_margin_top"
        android:layout_marginBottom="@dimen/product_detail_attribute_value_margin_bottom"
        android:fontFamily="@font/montserrat_font"
        android:text="@string/description"
        android:textSize="@dimen/product_detail_attribute_value_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attribute_header" />

</androidx.constraintlayout.widget.ConstraintLayout>